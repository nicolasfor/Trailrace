<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".navegacion.TrackFragment"
    android:background="@color/tabs"
    android:weightSum="1">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/road" />

    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#80000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    <customfonts.MyRegulerText
        android:id="@+id/buttonRunMaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded1"
        android:padding="14dp"
        android:text="Start drawing"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="16dp"
        android:layout_alignBottom="@+id/map"
        android:layout_centerHorizontal="true" />

        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <customfonts.MyRegulerText
            android:id="@+id/buttonMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded1"
            android:padding="14dp"
            android:text="Punto Marca"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="16dp"
            android:layout_alignBottom="@+id/map"
            android:layout_centerHorizontal="true" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <customfonts.MyRegulerText
            android:id="@+id/crear_nombre_pista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded1"
            android:padding="14dp"
            android:text="Crear Nombre"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="16dp"
            android:layout_alignBottom="@+id/map"
            android:layout_centerHorizontal="true" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <customfonts.MyRegulerText
            android:id="@+id/buttonTerminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded1"
            android:padding="14dp"
            android:text="Terminar"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="16dp"
            android:layout_alignBottom="@+id/map"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="333dp"
        android:orientation="horizontal">


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            tools:context="com.cam.trailrace.MapsActivity"
            android:layout_below="@+id/label"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>
</LinearLayout>
